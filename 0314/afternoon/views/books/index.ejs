<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
</head>
<body>
    <nav>
        <ul>
          <li>
            <a href="/authors">Authors</a>
            <a href="/books/new">Create Book</a>
          </li>
        </ul>
      </nav>

      <section>
        <table>
          <thead>
            <tr>
              <th>title</th>
              <th>author</th>
              <th>pages</th>
              <th>year</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% for (const book of books) { %>
              <tr>
                <td><%= book.title %> </td>
                <td><%= book.author.name %> </td>
                <td><%= book.pages %> </td>
                <td><%= book.year %> </td>
                <td></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </section>
</body>
</html>